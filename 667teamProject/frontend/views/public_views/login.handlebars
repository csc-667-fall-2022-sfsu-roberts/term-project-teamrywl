<div class="container text-center">
  <div class="row m-5">
    <div class="col-sm-12 col-md-8 offset-md-2 mt-5">
      <div class="card">
        <div class="card-body">
          <h2 class="card-title">Login</h2>

          <hr>
          <div class="alert alert-danger" id="error-alert" role="alert" hidden="hidden">Wrong Login Information.
            Try Again.</div>
          <form id="login-form">
            <div class="form-group">
              <label for="usernameInput">Username</label>
              <input class="form-control" required="required" id="usernameInput" type="text"
                placeholder="Enter Your Username" name="username" />
            </div><br /><br />
            <div class="form-group">
              <label for="passwordInput">Password</label>
              <input class="form-control" required="required" id="passwordInput" type="password"
                placeholder="Enter Your Password" name="password" />
            </div><br /><br />
            <button class="btn btn-primary" id="login-btn" type="submit">Login</button>
            <a class="card-text p-3" href="/signUp">Don't have an account? Sign up</a>
            <a class="card-text p-3" href="/signUp">Click if you forgot password</a>
          </form>
          
        </div>
      </div>
    </div>
  </div>
  <span style="height: 275px; display: block;"></span>

</div>