doctype html 
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible" content="ie=edge")
    meta(http-equiv="Content-Security-Policy" content="upgrade-insecure-requests")
    block title
    block styles    
    block scripts
   
  body
    

    header(class = "header") 
      img(
        background-color= "black"
        src="/images/unoLogo1.png"
        class="rounded mx-auto img-fluid d-block"
        data-bs-toggle="popover"
        data-bs-content="Top popover"
        alt="Responsive image"
        width: 50%
        height=auto
        )

      nav(class="navbar navbar-expand-sm -dark bg-dark bg-primary mb-3")
        div(class="container")
          a(
            class="navbar-brand btn btn-primary"
            style="font-family: fantasy "
            href="/lobby"
            ) 

            b='PLAY UNO NOW'

          ul(class="navbar-nav")
            li(class="nav-items")
              a(class="nav-link btn btn-primary text-green" href="/"  data-bs-toggle="tooltip" data-bs-placement="left" title="Go to Home Page") Home
              
            li(class="nav-items")
              a(class="nav-link btn btn-dark text-green"  title="") 

            li(class="nav-item")
              a(class="nav-link btn btn-primary text-green" href="/register"  data-bs-toggle="tooltip" data-bs-placement="right" title="Go to account ") Register To Play

            li(class="nav-item") 
              a(class="nav-link btn btn-dark text-green"  title="") 
            
            li(class="nav-item")
              a(class="nav-link btn btn-primary text-green" href="/rules"  data-bs-toggle="tooltip" data-bs-placement="left" title="View the rules") Rules
              li(class="nav-items")
            block navbar
      hr
    block content

    hr

  
    
  footer(class=" p-3 bd-highlight -dark bg-dark footer")
    a(href="/rules")
